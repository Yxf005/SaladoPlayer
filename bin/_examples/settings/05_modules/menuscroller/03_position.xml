<?xml version="1.0" encoding="utf-8" ?>
<!--
	Change size and alignment of module window. Scrolling direction is determined by maxSize values,
	if maximal width is greater then maximal height it scrolls vertical, analogically the other way around.
	Additionally you can define "close" button and place it around menu window.
	
	See: [../../_manual/index.html?module_menuscroller.html]
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerBlue" path="~panos/checker/dz_blue/blue_f.xml">
			<image id="cb_arrowYellow" path="~media/images/spots/arrow_yellow.png" mouse="onClick:toggleOpenMenu"/>
		</panorama>
		<panorama id="checkerGreen" path="~panos/checker/dz_green/green_f.xml">
			<image id="cg_arrowYellow" path="~media/images/spots/arrow_yellow.png" mouse="onClick:toggleOpenMenu"/>
		</panorama>
		<panorama id="checkerRed" path="~panos/checker/dz_red/red_f.xml">
			<image id="cr_arrowYellow" path="~media/images/spots/arrow_yellow.png" mouse="onClick:toggleOpenMenu"/>
		</panorama>
		<panorama id="checkerYellow" path="~panos/checker/dz_yellow/yellow_f.xml">
			<image id="cy_arrowYellow" path="~media/images/spots/arrow_yellow.png" mouse="onClick:toggleOpenMenu"/>
		</panorama>
	</panoramas>
	<modules>
		<MenuScroller path="~modules/menuscroller/MenuScroller-1.3.3.swf">
			<window transition="type:slideDown" align="horizontal:center" maxSize="width:2000,height:200" margin="left:50,right:50,top:50,bottom:50"/>
			<close move="horizontal:10,vertical:-10" path="~media/images/misc/close.png"/>
			<groups>
				<group id="g1">
					<element target="checkerBlue" path="~panos/checker/dz_blue/200x100.jpg"/>
					<element target="checkerGreen" path="~panos/checker/dz_green/200x100.jpg"/>
					<element target="checkerRed" path="~panos/checker/dz_red/200x100.jpg"/>
					<element target="checkerYellow" path="~panos/checker/dz_yellow/200x100.jpg"/>
				</group>
			</groups>
		</MenuScroller>
	</modules>
	<actions>
		<action id="toggleOpenMenu" content="MenuScroller.toggleOpen()"/>
	</actions>
</SaladoPlayer>