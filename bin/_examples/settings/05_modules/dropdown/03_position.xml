<?xml version="1.0" encoding="utf-8"?>
<!--
	You can set position of drop-down list inside panorama window.
	
	See: [../../_manual/index.html?module_dropdown.html]
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerGreen" path="~tours/checker/dz_green/green_f.xml"/>
		<panorama id="checkerBlue" path="~tours/checker/dz_blue/blue_f.xml"/>
		<panorama id="checkerRed" path="~tours/checker/dz_red/red_f.xml"/>
		<panorama id="checkerYellow" path="~tours/checker/dz_yellow/yellow_f.xml"/>
	</panoramas>
	<modules>
		<DropDown path="~modules/dropdown/DropDown-1.3.swf">
			<window align="horizontal:right,vertical:top" move="horizontal:-40,vertical:40"/>
			<settings opensUp="false"/>
			<groups>
				<group id="g1">
					<element target="checkerBlue" label="Blue checker"/>
					<element target="checkerGreen" label="Green checker"/>
					<element target="checkerRed" label="Red checker"/>
					<element target="checkerYellow" label="Yellow checker"/>
				</group>
			</groups>
		</DropDown>
	</modules>
</SaladoPlayer>