<?xml version="1.0" encoding="utf-8"?>
<!--
	Position and align buttons inside panorama window. You can also set custom transparency for each image.
	
	See: [../../_manual/index.html?module_imagebutton.html]
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerGreen" path="~tours/checker/dz_green/green_f.xml"/>
	</panoramas>
	<modules>
		<ImageButton path="~modules/imagebutton/ImageButton-1.3.swf">
			<button id="logo1" path="~tours/checker/_media/images/misc/panozona_logo.png">
				<window move="horizontal:30,vertical:30" alpha="0.5"/>
			</button>
			<button id="logo2" path="~tours/checker/_media/images/misc/panozona_logo.png">
				<window align="vertical:middle" move="horizontal:30,vertical:0"/>
			</button>
			<button id="logo3" path="~tours/checker/_media/images/misc/panozona_logo.png">
				<window align="horizontal:right,vertical:bottom" move="horizontal:-30,vertical:-60"/>
			</button>
		</ImageButton>
	</modules>
</SaladoPlayer>