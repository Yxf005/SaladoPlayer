<?xml version="1.0" encoding="utf-8"?>
<!--
	Use module to place images inside panorama window. You can use images or standalone swf files.
	When there are no mouse events assigned, button is transparent to mouse movement.
	
	See: [../../_manual/index.html?module_imagebutton.html]
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="checkerGreen" path="~tours/checker/dz_green/green_f.xml"/>
	</panoramas>
	<modules>
		<ImageButton path="~modules/imagebutton/ImageButton-1.3.swf">
			<button id="logo" path="~tours/_media/images/misc/openpano_logo.png" action="logoOnClick"/>
		</ImageButton>
	</modules>
	<actions>
		<action id="logoOnClick" content="SaladoPlayer.print(logo got clicked)"/>
	</actions>
</SaladoPlayer>