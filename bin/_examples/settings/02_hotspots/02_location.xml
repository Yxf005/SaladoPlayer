<?xml version="1.0" encoding="utf-8" ?>
<!--
	Use location attribute for positioning hotspots inside panorama. It can take any set of values:
	pan(horizontal), tilt(vertical) and distance(depth). Default value for distance is 400.
	Sequence of hotspots is determined by their distance values.
	
	http://panozona.com/wiki/SaladoPlayer:Configuration
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="greenChecker" path="~panos/checker/dz_green/green_f.xml">
			<image id="gc_ArrowBlue" path="~media/images/spots/arrow_blue.png" location="tilt:10,distance:600"/>
			<image id="gc_ArrowGreen" path="~media/images/spots/arrow_green.png" location="pan:30"/>
			<image id="gc_ArrowRed" path="~media/images/spots/arrow_red.png" location="pan:35,tilt:3,distance:550"/>
		</panorama>
	</panoramas>
	<modules>
		<ViewFinder path="~modules/viewfinder/ViewFinder-1.3.swf"/>
	</modules>
</SaladoPlayer>