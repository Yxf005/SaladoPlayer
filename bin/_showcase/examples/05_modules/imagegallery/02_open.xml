<?xml version="1.0" encoding="utf-8" ?>
<!--
	
	http://panozona.com/wiki/Module:ImageGallery
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true" align="horizontal:left"/>
	</global>
	<panoramas>
		<panorama id="checkerRed" path="~panos/dz_checker_red/checker_red_f.xml">
			<image id="cb_arrowGreen" path="~media/images/spots/arrow_green.png" location="pan:-5,tilt:5" mouse="onClick:openGallery"/>
			<image id="cb_arrowRed" path="~media/images/spots/arrow_red.png" location="pan:-5,tilt:-5" mouse="onClick:closeGallery"/>
			<image id="cb_arrowYellow" path="~media/images/spots/arrow_yellow.png" location="pan:5" mouse="onClick:toggleOpenGallery"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageGallery path="~modules/imagegallery/ImageGallery-1.0.swf">
			<window open="false" onOpen="printOpen" onClose="printClose"/>
			<close path="~media/images/misc/close.png" move="vertical:-10,horizontal:10"/>
			<viewer path="~modules/imagegallery/images/buttons_dark_40x40.png" throbber="~media/images/misc/throbber-circles.gif"/>
			<groups>
				<group id="g1">
					<image path="~media/images/maps/map1.jpg"/>
				</group>
			</groups>
		</ImageGallery>
	</modules>
	<actions>
		<action id="openGallery" content="ImageGallery.setOpen(true)"/>
		<action id="closeGallery" content="ImageGallery.setOpen(false)"/>
		<action id="toggleOpenGallery" content="ImageGallery.toggleOpen()"/>
		<action id="printOpen" content="SaladoPlayer.print(gallery opened)"/>
		<action id="printClose" content="SaladoPlayer.print(gallery closed)"/>
	</actions>
</SaladoPlayer>